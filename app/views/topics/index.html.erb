<p id="notice"><%= notice %></p>

<h1>Listing Topics</h1>

<table>
  <thead>
    <tr>
      <th>Votes</th>
      <th>Debate Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.score %></td>
        <td><%= link_to topic.title, topic_path(topic), :class=> "topic-link" %></td>
        <td>
          <%= link_to '', upvote_topic_vote_path(topic), method: :post, class: "glyphicon glyphicon-thumbs-up topic-vote-button" %>
          <%= link_to '', downvote_topic_vote_path(topic), method: :post, class: "glyphicon glyphicon-thumbs-down topic-vote-button" %>
        </td>
        <% if current_user && current_user.email == "bbensch@gmail.com" %>
          <td><%= link_to 'Show', topic %></td>
          <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
          <td><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

