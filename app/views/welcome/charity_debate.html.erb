                        <ul class="list-inline intro-social-buttons">
                            <li>
                              <%= form_for(@charity_email) do |f| %>
                                <% if @charity_email.errors.any? %>
                                  <div id="error_explanation">
                                    <h2><%= pluralize(@charity_email.errors.count, "error") %> prohibited this charity_email from being saved:</h2>

                                    <ul>
                                    <% @charity_email.errors.full_messages.each do |message| %>
                                      <li><%= message %></li>
                                    <% end %>
                                    </ul>
                                  </div>
                                <% end %>

                                <div class="form-inline">
                                  <%= f.email_field :email, autofocus: true, class:"input-group input-group-lg text-black", placeholder:"Email"  %>
                                  <%= f.submit "Stay Tuned", class:"btn btn-success btn-lg" %>
                                </div>
                              <% end %>

                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
