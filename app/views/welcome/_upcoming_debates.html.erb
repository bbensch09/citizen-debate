<div class="upcoming-debates-container">
  <h2 class="center">
    <span class="resolved"><%= link_to "Upcoming Debates", debates_path %></span>
  </h2>
  <% @pending_debates.each do |debate| %>
          <div class="col-lg-12">
          <%= image_tag debate.affirmative_debater.user.profile.avatar.url(:thumb), alt:"avatar-img", class:"col-lg-1 col-sm-1 padding-xs img-responsive" %>
          <h4 class="col-lg-9 col-sm-9 text-left"> <%= link_to debate.title, debate %> </h4>
          <%= link_to 'Preview', debate,  method: :get,  class: "col-lg-2 col-sm-2 padding-xs btn btn-default" %>
          </div>
      <% end %>
</div>
<div class="preview-cta col-lg-12">
  <%= link_to "Join the debate", debate_path(@debate), class: "btn btn-success" %>
</div>
