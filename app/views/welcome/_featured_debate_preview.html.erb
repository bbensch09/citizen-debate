<div class="debate-preview-container">
  <h2 class="text-left">
    <span class="resolved">Debate Preview:</span> <%= link_to @debate.title, debate_path(@debate) %>
  </h2>
  <div class="col-lg-6 col-md-3 col-sm-12 affirmative-details">
    <h4 class="col-lg-4">Supporting the affirmative:</h4>
    <div class="col-lg-8">
    <%= image_tag @debate.affirmative_debater.user.profile.avatar.url(:thumb), alt:"avatar-img", class:"img-debate-details" %>
         <span class="display-name"><%= @debate.affirmative_debater.user.profile.display_name %></span class="display-name">
    </div>
    <br>
    <h4 class="text-left hidden-xs">
      <!--   <%= raw(truncate(@debate.opening_affirmative.content, length: 120, separator: ' ')) %> -->
        <%= raw(@debate.opening_affirmative.content) %>
    </h4>
  </div>

  <div class="col-lg-6 col-md-3 col-sm-12">
    <h4 class="col-lg-4">Supporting the negative:</h4>
    <div class="col-lg-8">
    <%= image_tag @debate.negative_debater.user.profile.avatar.url(:thumb), alt:"avatar-img", class:"img-debate-details" %>
     <span class="display-name"><%= @debate.negative_debater.user.profile.display_name %></span class="display-name">
    </div>
    <br>
    <h4 class="text-left hidden-xs">
        <%= raw(@debate.opening_negative.content) %>
    </h4>
  </div>
</div>
<div class="preview-cta">
  <%= link_to "Read more and cast your vote", debate_path(@debate), class: "col-lg-12 btn btn-lg btn-success" %>
</div>
