<div class="well">
  <%= form_for @message, remote: true do |f| %>
    <div class="form-group">
            <%= f.label :message_content, "Post your next argument." %><br>
            <%= f.cktext_area :message_content, rows: 4, class: 'ckeditor-content', required: true, :ckeditor => {:language => 'us'} %>
          </div>
          <div class="hidden">
            <%= f.number_field :round_id, value: @debate.rounds.last.id %>
          </div>
    <%= f.submit 'Submit message', class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>
</div>
