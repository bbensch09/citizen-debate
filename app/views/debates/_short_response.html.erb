<div class="well">
  <%= form_for @message, remote: true do |f| %>
    <div class="form-group">
            <%= f.label :message_content, "Post your next argument." %><br>
            <%= f.text_field :message_content, rows: 2, class: 'form-control', required: true, minlength: 2 %>
          </div>
          <div class="hidden">
            <%= f.number_field :round_id, value: @debate.rounds.last.id %>
          </div>
    <%= f.submit 'Submit message for cross-examination', class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>
</div>
