<div class="profile-container">
  <h2>Debate Details</h2>
<p>
  <strong>Affirmative:</strong>
  <%= @debate.affirmative_debater.user.profile.display_name %>
  <%= image_tag @debate.affirmative_debater.user.profile.avatar.url(:thumb), alt:"avatar-img", class:"img-responsive" %>
</p>

<p>
  <strong>Negative:</strong>
  <%= @debate.negative_debater.user.profile.display_name %>
  <%= image_tag @debate.negative_debater.user.profile.avatar.url(:thumb), alt:"avatar-img", class:"img-responsive" %>
</p>

<p>
  <strong>Judge left:</strong>
  <%= @debate.judge_left.user.profile.display_name %>
</p>

<p>
  <strong>Judge right:</strong>
  <%= @debate.judge_right.user.profile.display_name %>
</p>

<p>
  <strong>Status:</strong>
  <%= @debate.status %>
</p>

<p>
  <strong>Date:</strong>
  <%= @debate.start_date %>
</p>

<p>
  <strong>Topic:</strong>
  <%= @debate.topic.title %>
</p>

<% @debate.rounds.each do |round| %>
  <hr> <h3> Round #<%= round.round_number %> </h3>
  <% round.messages.each do |message| %>
    <% if message.author.user.id = current_user.id %>
          <div class="highlight">
      <% else %>
          <div>
    <% end %>
    <h4> Author: <%= message.author.user.profile.display_name %> </h4>
    <p> <%= message.message_content %> </p>
    </div>
  <% end %>
<% end %>

<% if current_user && (current_user == @debate.affirmative_debater.user || current_user == @debate.negative_debater.user) %>
  <h1> Enter your response. <%= @debate.rounds.last.time_remaining %> </h1>
  <% @message = Message.new %>
  <%= form_for(@message) do |f| %>
      <% if @message.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h2>
          <ul>
          <% @message.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
  <div class="field">
    <%= f.label :message_content %><br>
    <%= f.text_area :message_content, size: "50x2" %>
  </div>
  <div class="hidden">
    <%= f.number_field :round_id, value: @debate.rounds.last.id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  <% end %> <!-- End form for @messages -->
  <% @round = Round.new %>
  <%= form_for(@round) do |f| %>
  <div class="field hidden">
    <%= f.label :debate_id %>
    <%= f.number_field :debate_id, value: @debate.id %>
    <%= f.label :round_number %>
    <%= f.number_field :round_number, value: (@debate.rounds.last.round_number + 1) %>
  </div>
  <div class="actions">
    <%= f.submit "Start next round" %>
  </div>
<% end %> End form for starting next round

<% end %> <!-- End if statement for current debate participants -->

<%= link_to 'Back to All Debates', debates_path %>
</div>
