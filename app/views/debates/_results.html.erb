<h3 class="center results-cta">
   <%= link_to "Sign up to view all debates", new_user_session_path, class: "fa btn btn-success" %>
</h3>
<table class="col-lg-8 col-sm-6 waitlist-table">
  <thead>
    <tr>
      <th>Initial Votes</th>
      <th>Vote Count</th>
      <th>Percent</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td> Support the resolution </td>
        <td><%= @debate.before_agree %></td>
        <td><%= number_to_percentage((@debate.before_agree.to_f / @debate.before_count.to_f)*100, precision: 2) %></td>
      </tr>
      <tr>
        <td> Undecided </td>
        <td><%= @debate.before_unsure %></td>
        <td><%= number_to_percentage((@debate.before_unsure.to_f / @debate.before_count.to_f)*100, precision: 2) %></td>
      </tr>
      <tr>
        <td> Oppose the resolution </td>
        <td><%= @debate.before_disagree %></td>
        <td><%= number_to_percentage((@debate.before_disagree.to_f / @debate.before_count.to_f)*100, precision: 2) %></td>
      </tr>
  </tbody>
</table>

<div class="col-lg-4 col-sm-6 results-chart">
  <%= pie_chart({"Affirmative" => @debate.before_agree, "Negative" => @debate.before_disagree, "Unsure" =>@debate.before_unsure}, id: "before-chart", height: "140px") %>
</div>

<table class="col-lg-8 col-sm-12 waitlist-table">
  <thead>
    <tr>
      <th>Final votes</th>
      <th>Vote Count</th>
      <th>Percent</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td> Support the resolution </td>
        <td><%= @debate.after_agree %></td>
        <td><%= number_to_percentage((@debate.after_agree.to_f / @debate.after_count.to_f)*100, precision: 2) %></td>
      </tr>
      <tr>
        <td> Undecided </td>
        <td><%= @debate.after_unsure %></td>
        <td><%= number_to_percentage((@debate.after_unsure.to_f / @debate.after_count.to_f)*100, precision: 2) %></td>
      </tr>
      <tr>
        <td> Do not support the resolution </td>
        <td><%= @debate.after_disagree %></td>
        <td><%= number_to_percentage((@debate.after_disagree.to_f / @debate.after_count.to_f)*100, precision: 2) %></td>
      </tr>
  </tbody>
</table>
<div class="col-lg-4 col-sm-6 results-chart">
  <%= pie_chart({"Affirmative" => @debate.after_agree, "Negative" => @debate.after_disagree, "Unsure" =>@debate.after_unsure}, id: "after-chart", height: "140px") %>
</div>
<div class="summary">
<h3 class="col-lg-6 col-sm-6 results-minds-changed">Minds changed by the affirmative: <b><%=@debate.affirmative_minds_changed %> </b> </h3>
<h3 class="col-lg-6 col-sm-6 results-minds-changed">Minds changed by the negative: <b><%=@debate.negative_minds_changed %></b></h3>
<% if @debate.winner.is_a?(Debater) %>
<h2 class="col-lg-6 col-sm-6 center winner">Trending winner: <%= @debate.winner.user.profile.display_name %>
<%= image_tag @debate.winner.user.profile.avatar.url(:thumb), alt:"avatar-img", class:"img-debate-details" %>
<% else %>
<h2 class="col-lg-6 col-sm-6 center winner">Trending winner: <%= @debate.winner %>
<% end %>
</h2>
</div>

