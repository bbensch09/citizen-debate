<div class="well">
  <%= form_for (@closing_statement) do |f| %>
    <div class="form-group">
            <%= f.label :content, "Post your closing statement." %><br>
            <%= f.cktext_area :content, rows: 12, class: 'ckeditor-content', required: true, :ckeditor => {:language => 'us'} %>
          </div>
          <div class="hidden">
            <%= f.number_field :round_id, value: 3 %>
            <%= f.number_field :debate_id, value: @debate.id %>
            <%= f.number_field :author_id, value: current_user.id %>
          </div>
    <%= f.submit 'Submit message', class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>
</div>
