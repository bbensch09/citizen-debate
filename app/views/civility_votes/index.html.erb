<p id="notice"><%= notice %></p>

<h1>Listing Civility Votes</h1>

<table>
  <thead>
    <tr>
      <th>Voter</th>
      <th>Debate</th>
      <th>Affirmative Debater</th>
      <th>Affirmative Rating</th>
      <th>Negative Debater</th>
      <th>Negative Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @civility_votes.each do |civility_vote| %>
      <tr>
        <td><%= civility_vote.voter_id %></td>
        <td><%= civility_vote.debate_id %></td>
        <td><%= civility_vote.affirmative_id %></td>
        <td><%= civility_vote.affirmative_rating %></td>
        <td><%= civility_vote.negative_id %></td>
        <td><%= civility_vote.negative_rating %></td>
        <td><%= link_to 'Show', civility_vote %></td>
        <td><%= link_to 'Edit', edit_civility_vote_path(civility_vote) %></td>
        <td><%= link_to 'Destroy', civility_vote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

