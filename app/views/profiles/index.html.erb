<h1>Current Wait-list Order</h1>

<table>
  <thead>
    <tr>
      <th>Avatar </th>
      <th>Display name</th>
      <th>Profile ID </th>
      <th>User ID </th>
      <th>Rank </th>
      <th>Points </th>
      <th>City</th>
      <th>State</th>
      <th>Age</th>
      <th>Political affiliation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td> <%= image_tag profile.avatar.url(:thumb), alt:"avatar-img", class:"img-responsive img-thumbnail" %> </td>
        <td><%= profile.display_name %></td>
        <td><%= profile.id %></td>
        <td><%= profile.user_id %></td>
        <td><%= profile.user.rank %></td>
        <td><%= profile.user.points %></td>
        <td><%= profile.city %></td>
        <td><%= profile.state %></td>
        <td><%= profile.age %></td>
        <td><%= profile.political_affiliation %></td>
        <% if current_user && current_user.email == "bbensch@gmail.com" %>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user && current_user.email == "bbensch@gmail.com" %>
<%= link_to 'New Profile', new_profile_path %>
<% end %>
